@model EntityLayer.Concerete.Admin
@{
    ViewBag.Title = "EditAdmin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Admini Düzenle</h2>

@using (Html.BeginForm("EditAdmin", "Authorization", FormMethod.Post))
{
    @Html.HiddenFor(x => x.Adminid, new { @class = "form-control" })
    @Html.Label("Admin Maili")
    @Html.TextBoxFor(x => x.AdminUserName, new { @class = "form-control" })
    <br />
    @Html.Label("Şifre")
    @Html.TextBoxFor(x => x.AdminPaswordName, new { @class = "form-control" })
    <br />
    @Html.Label("Rol")
    @Html.TextBoxFor(x => x.AdminRole, new { @class = "form-control" })
    <br />
    <button class="btn btn-success">Güncelle</button>
}

